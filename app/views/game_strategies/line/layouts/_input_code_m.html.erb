<% if current_user.present? && current_user.team.present? %>
  <%= form_for :code_string, url: pass_game_codes_path(@game), html: {class: 'button_to'} do |f| %>
		<%= f.label :code, 'Введите код:' %><br>
		<%= f.text_field :code %><br>
		<%= f.submit 'OK' %><br>
    <%= link_to 'Полная версия', game_path(@game) %>
  <% end %>
<% end %>